¡ES UNA CONSTANTE!
'''
MY_CONSTANT_VARIABLE = "Laszlitoo2"

#Tipo de dato: 'Integer' solo números ENTEROS, NO decimales.
my_int = 1, 2, 3, 10, 99, 1337

#Tipo de dato: 'Float' números DECIMALES.
my_float = 1.5, 10.53, 475.3

#Tipo de dato: 'Boolean' puede ser True o False.
my_boolean0 = False
my_boolena1 = True

#Tipo de dato: 'String' únicamente acepta cadenas de textos.
my_string = "Esto es un String o cadena de texto"
my_other_string = 'Esto es otro String o cadena de texto'

